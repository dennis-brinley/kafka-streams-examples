#####################################################
## ENVIRONMENT CONFIG FOR KAFKA DEMO
##
## Usage:
##   source env.config
#####################################################
export CONFLUENT=7.3.1
export CONFLUENT_DOCKER_TAG=7.3.1
export CONFLUENT_SHORT=7.3
export CONFLUENT_MAJOR=7
export CONFLUENT_MINOR=3
export CONFLUENT_PATCH=1
## export DEMO_HOME=/opt/kafka-demo
export PATH=$PATH:$DEMO_HOME/confluent-$CONFLUENT/bin
export PARTITIONS=2
export REPLICATION_FACTOR=3

echo "Set ENV VARS:"
echo "CONFLUENT              $CONFLUENT"
echo "CONFLUENT_DOCKER_TAG   $CONFLUENT_DOCKER_TAG"
echo "CONFLUENT_SHORT        $CONFLUENT_SHORT"
echo "CONFLUENT_MAJOR        $CONFLUENT_MAJOR"
echo "CONFLUENT_MINOR        $CONFLUENT_MINOR"
echo "CONFLUENT_PATCH        $CONFLUENT_PATCH"
echo "DEMO_HOME              $DEMO_HOME"
echo "PATH                   $PATH"
echo "PARTITIONS             $PARTITIONS"
echo "REPLICATION_FACTOR     $REPLICATION_FACTOR"
